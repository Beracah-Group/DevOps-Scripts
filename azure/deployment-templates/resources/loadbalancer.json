{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": {
      "type": "string"
    },
    "loadBalancerName": {
      "type": "string"
    },
    "poolName": {
      "type": "string"
    },
    "subnetId": {
      "type": "string"
    }
  },
  "variables": {
    "lbId": "[resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName'))]",
    "poolId": "[concat(variables('lbId'), '/backendAddressPools/', parameters('poolName'))]",
    "frontendIPConfigId": "[concat(variables('lbId'),'/frontendIPConfigurations/loadBalancerFrontEnd')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[parameters('baseName')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-03-01",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "LoadBalancerFrontEnd",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnetId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('poolName')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "http",
            "properties" :{
               "frontendIPConfiguration" :{
                "id": "[variables('frontendIPConfigId')]"
               },
              "backendAddressPool": {
                "id": "[variables('poolId')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "probe": {
                "id": "[concat(variables('lbId'), '/probes/http')]"
              },
              "idleTimeoutInMinutes": 4,
              "loadDistribution": "Default"
            }
          },
          {
            "name": "https",
            "properties" :{
               "frontendIPConfiguration" :{
                "id": "[variables('frontendIPConfigId')]"
               },
              "backendAddressPool": {
                "id": "[variables('poolId')]"
              },
              "protocol": "Tcp",
              "frontendPort": 443,
              "backendPort": 443,
              "enableFloatingIP": false,
              "probe": {
                "id": "[concat(variables('lbId'), '/probes/https')]"
              },
              "idleTimeoutInMinutes": 4,
              "loadDistribution": "Default"
            }
          },
          {
            "name": "syslog",
            "properties" :{
               "frontendIPConfiguration" :{
                "id": "[variables('frontendIPConfigId')]"
               },
              "backendAddressPool": {
                "id": "[variables('poolId')]"
              },
              "protocol": "Tcp",
              "frontendPort": 6514,
              "backendPort": 6514,
              "enableFloatingIP": false,
              "probe": {
                "id": "[concat(variables('lbId'), '/probes/syslog')]"
              },
              "idleTimeoutInMinutes": 4,
              "loadDistribution": "Default"
            }
          },
          {
            "name": "kibana",
            "properties" :{
               "frontendIPConfiguration" :{
                "id": "[variables('frontendIPConfigId')]"
               },
              "backendAddressPool": {
                "id": "[variables('poolId')]"
              },
              "protocol": "Tcp",
              "frontendPort": 5601,
              "backendPort": 5601,
              "enableFloatingIP": false,
              "probe": {
                "id": "[concat(variables('lbId'), '/probes/kibana')]"
              },
              "idleTimeoutInMinutes": 4,
              "loadDistribution": "Default"
            }
          },
          {
            "name": "grafana",
            "properties" :{
               "frontendIPConfiguration" :{
                "id": "[variables('frontendIPConfigId')]"
               },
              "backendAddressPool": {
                "id": "[variables('poolId')]"
              },
              "protocol": "Tcp",
              "frontendPort": 3000,
              "backendPort": 3000,
              "enableFloatingIP": false,
              "probe": {
                "id": "[concat(variables('lbId'), '/probes/grafana')]"
              },
              "idleTimeoutInMinutes": 4,
              "loadDistribution": "Default"
            }
          }
        ],
        "probes": [
          {
            "name":"http",
            "properties":
            {
              "protocol": "Tcp",
              "port": 80,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          },
          {
            "name": "https",
            "properties":
            {
              "protocol": "Tcp",
              "port": 443,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          },
          {
            "name": "syslog",
            "properties":
            {
              "protocol": "Tcp",
              "port": 443,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          },
          {
            "name": "kibana",
            "properties":
            {
              "protocol": "Tcp",
              "port": 6501,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          },
          {
            "name": "grafana",
            "properties":
            {
              "protocol": "Tcp",
              "port": 3000,
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      }
    }
  ]
}
